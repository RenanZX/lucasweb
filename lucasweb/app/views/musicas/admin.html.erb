<p id="notice"><%= notice %></p>

<table id="gerenciamento">
  <thead>
  <tr>
    <th colspan="4"><h1>Álbum</h1></th>
  </tr>
  </thead>

  <thead>
    <tr>
      <th>Titulo</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @musicas.each do |musica| %>
      <tr>
        <td><%= musica.titulo %></td>
        <td><%= link_to 'Mostrar', musica %></td>
        <td><%= link_to 'Editar', edit_musica_path(musica) %></td>
        <td><%= link_to 'Deletar', musica, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= button_to "Adicionar Álbum", new_musica_path, :method => :get %>

